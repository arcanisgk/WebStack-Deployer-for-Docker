{
  "name": "webstack-deployer-for-docker",
  "description": "WebStack Deployer for Docker",
  "version": "1.0.0",
  "main": "src/main.js",
  "license": "MIT",
  "author": "Walter Nu√±ez / icarosnet@gmail.com",
  "scripts": {
    "start": "electron src/main.js --trace-warnings",
    "build": "electron-builder"
  },
  "dependencies": {
    "electron-is-dev": "^3.0.1",
    "glob": "^11.0.1",
    "node-fetch": "^3.3.2",
    "rimraf": "^6.0.1"
  },
  "devDependencies": {
    "electron": "^34.0.2",
    "electron-builder": "^24"
  },
  "build": {
    "appId": "com.webstack.deployer4docker.app",
    "productName": "WebStack Deployer for Docker",
    "win": {
      "target": "nsis",
      "artifactName": "webstack-deployer-for-docker-${version}.exe"
    },
    "linux": {
      "target": "AppImage",
      "category": "Development",
      "artifactName": "webstack-deployer-for-docker-${version}.AppImage"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.developer-tools",
      "artifactName": "webstack-deployer-for-docker-${version}.dmg"
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ]
  }
}
